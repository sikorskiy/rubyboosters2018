<% content_for(:title) {"Home page"} %>
<h1>Players#index</h1>
<p>Find me in app/views/players/index.html.erb</p>
<div class="block">
  <div class="board">
    <table>
      <tr>
        <td>&#9820;</td>
        <td>&#9822;</td>
        <td>&#9821;</td>
        <td>&#9819;</td>
        <td>&#9818;</td>
        <td>&#9821;</td>
        <td>&#9822;</td>
        <td>&#9820;</td>
      </tr>
      <tr>
        <% 8.times do %>
          <td>&#9823;</td>
        <% end %>
      </tr>
      <% 4.times do %>
        <tr>
          <% 8.times do %>
            <td></td>
          <% end %>
        </tr>
      <% end %>
      <tr>
        <% 8.times do %>
          <td>&#9817;</td>
        <% end %>
      </tr>
      <tr>
        <td>&#9814;</td>
        <td>&#9816;</td>
        <td>&#9815;</td>
        <td>&#9813;</td>
        <td>&#9812;</td>
        <td>&#9815;</td>
        <td>&#9816;</td>
        <td>&#9814;</td>
      </tr>
    </table>
  </div>
  <div class="player-list">
    <ol>
      <% @players.each do |p| %>
        <li>
          <%= "#{p.name} #{p.lastname}" %>
          <span class="hidden"> <%= "#{p.birth_year} - #{p.death_year}" %> </span>
        </li>
      <%end %>
    </ol>
  </div>
</div>